$TTL	604800
{{ startup_name }}.	IN	SOA	ns.{{ startup_name }}. mail.{{ startup_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

{% for vm in groups['dns_servers'] %}
{{ startup_name }}.	IN	NS	{{ vm }}
{% endfor %}

{% for vm in groups['all'] %}
{{ vm }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}

backup 		IN	A  {{ backup_ip }}

influxdb	IN	CNAME	{{ groups['influxdb'][0] }}
prometheus	IN	CNAME	{{ groups['prometheus'][0] }}
grafana		IN	CNAME	{{ groups['grafana'][0] }}
telegraf	IN	CNAME	{{ groups['influxdb'][0] }}
